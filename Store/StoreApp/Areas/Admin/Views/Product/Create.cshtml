@model ProductDtoForInsertion

<div class="text-center">
    <div class="display-6">Create</div>
</div>

<form merhod="post" asp-action="Create" enctype="multipart/form-data" >

    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group my-3">
        <select class="form-control" 
        asp-for="CategoryId"
        asp-items="@ViewBag.Categories">
            
        </select>
    </div>

    <div class ="form-group my-3">
        <input asp-for="ProductName" class="form-control" placeholder="ProductName" />
    </div>

    <div class ="form-group my-3">
        <input asp-for="Summary" class="form-control" placeholder="Summary" />
    </div>

    <div class ="form-group my-3">
        <input asp-for="Price" class="form-control" placeholder="Price" />
    </div>

    <div class ="form-group my-3">
        <input name="file" type="file" class="form-control" placeholder="ImageUrl" />
    </div>

    <div class ="form-group my-3">
        <div class="btn-group">
        <button class="btn btn-primary" type="submit">
            <i class="fa fa-save"></i>
            Save
            </button>
            <a asp-action="Index" class="btn btn-outline-primary">
                <i class="fa fa-list"></i>
                Products
            </a>
        </div>
    </div>
</form>